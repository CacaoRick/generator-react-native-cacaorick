{
	"extends": [
		"tslint:latest",
		"tslint-react"
	],
	"rules": {
		// 不檢查分號
		"semicolon": [
			true,
			"never"
		],
		// 多行的 import object array 最後一個項目後要加逗號
		"trailing-comma": [
			true,
			{
				"multiline": {
					"imports": "always",
					"objects": "always",
					"arrays": "always",
					"functions": "never",
					"typeLiterals": "ignore"
				}
			}
		],
		// TAB 縮排 大小 2
		"indent": [
			true,
			"tabs",
			2
		],
		// 不規定 import 的排序
		"ordered-imports": [
			false
		],
		// 使用 console.log 不警告
		"no-console": [
			false
		],
		// 不規定 object key 的排序
		"object-literal-sort-keys": [
			false
		],
		// 不規定 interface 必須以 I 開頭
		"interface-name": [
			true,
			"never-prefix"
		],
		"member-access": [
			true,
			"no-public"
		],
		"variable-name": [
			true,
			"check-format",
			"allow-leading-underscore",
			"ban-keywords"
		],
		"no-duplicate-imports": [
			false
		],
		"jsx-no-lambda": [
			false
		],
		"jsx-no-multiline-js": [
			false
		],
		"jsx-self-close": [
			false
		]
	}
}
